<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1.1.0" author="ngeor">
        <createTable tableName="scans">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="thing_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_scan_thing" referencedTableName="things" referencedColumnNames="id"/>
            </column>
            <column name="old_score" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="new_score" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="old_comments" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="new_comments" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="had_changes" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
